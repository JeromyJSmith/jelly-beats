.card {
  width: 164px;
  display: inline-block;
  margin: 16px 0;
  margin-right: 32px;
  text-align: left;
  cursor: pointer;
  vertical-align: top;
  border-radius: 0;
  white-space: normal;
  overflow: hidden;
}

.block {
  pointer-events: none;
  opacity: 0.2;
}

.card .content {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  font-size: 0.94em;
  margin: 16px 0;
}
.card .title {
  font-size: 0.96em;
  font-weight: 600;
  overflow: hidden;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
  flex-shrink: 0;
}

.card .title:hover {
  cursor: pointer;
  text-decoration: underline;
}

.card .subtitle {
  opacity: 0.5;
  margin-top: 4px;
  font-size: 0.84em;
  font-weight: 600;
  overflow: hidden;
  cursor: pointer;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
  flex-shrink: 0;
}

.card .subtitle:hover {
  text-decoration: underline;
}

.placeholder .title {
  width: 64%;
  opacity: 0.4;
  margin: 8px 0;
  margin-top: 16px;
  height: 0.74em;
  border-radius: 1em;
  background: var(--text-color);
}

.placeholder .subtitle {
  width: 35%;
  height: 0.7em;
  opacity: 0.2;
  margin: 8px 0;
  margin-bottom: 16px;
  border-radius: 1em;
  background: var(--text-color);
}

.tags {
  margin: 8px 0 0 0;
}

.tag {
  display: inline-block;
  padding: 4px 8px;
  margin-right: 8px;
  margin-bottom: 8px;
  background: #414759;
  border-radius: 4px;
  font-size: 0.8em;
}

.actions {
  margin-top: 16px;
  display: flex;
  justify-content: space-between;
  align-items: center;
  flex-shrink: 0;
}
